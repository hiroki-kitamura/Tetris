{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react", // JSXを有効化
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDirs": [
      "src/"
    ],
    "baseUrl": "src",
    "types": [
      "react",
      "node",
      "styled-components",
      "react-redux"
    ]
  },
  "includes": "src/**/*",
  "exclude": [
    "node_modules"
  ]
}